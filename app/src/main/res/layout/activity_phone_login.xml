<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/verification"
        android:id="@+id/ivVerification"/>
    
    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ivVerification"
        android:inputType="phone"
        android:layout_marginTop="20dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:padding="8dp"
        android:hint="Enter your Phone Number here"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:drawableStart="@drawable/phone"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="6dp"
        android:inputType="phone"
        android:layout_below="@id/phone_number_input"
        android:padding="5dp"
        android:hint="Write Verification Code here"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:drawableStart="@drawable/otp"
        android:visibility="invisible"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/send_ver_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Vertification Code"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttons"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/verification_code_input"/>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttons"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_below="@+id/send_ver_code_button"/>







</RelativeLayout>